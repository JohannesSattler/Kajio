<div class="post-holder" id="{{data._id}}">
    <div class="top-holder">
        <div class="content-holder">
            <p>
                {{data.sentence}}
            </p>
        </div>
        <div class="vote-holder">
            <div class="post-objectID" id="{{data._id}}"></div>
            <div class="user-objectID" id="{{data.userid}}"></div>
            {{#if data.upvote}}
                <img id="votes-uparrow" class="vote-arrow img-selected img-upvote"
                src="https://cdn3.iconfinder.com/data/icons/faticons/32/arrow-up-01-512.png">
                {{else}}
                <img id="votes-uparrow" class="vote-arrow"
                src="https://cdn3.iconfinder.com/data/icons/faticons/32/arrow-up-01-512.png">
            {{/if}}

            <p id="votes-amount"> 
                {{data.votes}} 
            </p>

            {{#if data.downvote}}
                <img id="votes-downarrow" class="vote-arrow img-selected img-downvote"
                src="https://cdn3.iconfinder.com/data/icons/faticons/32/arrow-down-01-512.png">
                {{else}}
                <img id="votes-downarrow" class="vote-arrow"
                src="https://cdn3.iconfinder.com/data/icons/faticons/32/arrow-down-01-512.png">
            {{/if}}
        </div>
    </div>
    <div class="line-break"></div>
    <div class="bottom-holder">
        <div id="time-ago">
            <img src="https://cdn2.iconfinder.com/data/icons/pittogrammi/142/10-512.png" alt="">
            <p> 
                {{data.timeAgo}} 
            </p>
        </div>
        <div id="comment-sect">
            <a href="/comment/{{data._id}}">
                Go to comments
            </a>
            <p>
                {{data.comments.length}} comments
            </p>
        </div>
    </div>
</div>
